<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets_backend" name="awesome tshirt assets backend" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script src="/awesome_tshirt/static/src/js/counter_click.js"></script>
            <script src="/awesome_tshirt/static/src/js/awesome_dashboard.js"></script>
        </xpath>

        <xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/awesome_tshirt/static/src/scss/awesome_dashboard.scss"/>
        </xpath>
    </template>
</odoo>
