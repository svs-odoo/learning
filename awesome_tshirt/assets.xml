<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets_backend" name="awesome tshirt assets backend" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/awesome_tshirt/static/src/js/chart_widget.js"></script>
            <script type="text/javascript" src="/awesome_tshirt/static/src/js/image_preview_widget.js"></script>
            <script type="text/javascript" src="/awesome_tshirt/static/src/js/late_widget.js"></script>
            <script type="text/javascript" src="/awesome_tshirt/static/src/js/warning_widget.js"></script>
            <script type="text/javascript" src="/awesome_tshirt/static/src/js/customer_form_view.js"></script>
            <script type="text/javascript" src="/awesome_tshirt/static/src/js/order_form_view.js"></script>
            <script type="text/javascript" src="/awesome_tshirt/static/src/js/awesome_dashboard.js"></script>
        </xpath>

        <xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/awesome_tshirt/static/src/scss/awesome_dashboard.scss"/>
            <link rel="stylesheet" type="text/scss" href="/awesome_tshirt/static/src/scss/late_widget.scss"/>
        </xpath>
    </template>
</odoo>
